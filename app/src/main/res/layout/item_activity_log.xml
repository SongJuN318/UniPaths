<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewLeaderboard"
        android:layout_width="358dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/quizlistbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:text="Activity"
        app:layout_constraintStart_toStartOf="@+id/viewLeaderboard"
        app:layout_constraintTop_toTopOf="@+id/viewLeaderboard" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="12dp"
        android:text="xxxx-xx-xx xx:xx:xx"
        app:layout_constraintEnd_toEndOf="@+id/viewLeaderboard"
        app:layout_constraintTop_toTopOf="@+id/viewLeaderboard" />

    <View
        android:id="@+id/view4"
        android:layout_width="0.8dp"
        android:layout_height="53dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/line"
        app:layout_constraintBottom_toBottomOf="@+id/viewLeaderboard"
        app:layout_constraintEnd_toStartOf="@+id/tvDate"
        app:layout_constraintTop_toTopOf="@+id/viewLeaderboard"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
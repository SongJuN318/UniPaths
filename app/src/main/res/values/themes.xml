<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UniPaths" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Theme.UniPaths" parent="Base.Theme.UniPaths" />
    
    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- other style attributes -->

        <!-- Define a custom style for the menu items -->
        <item name="android:actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
    </style>

    <!-- Define a custom style for the menu text appearance -->
    <style name="MyMenuTextAppearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">16sp</item> <!-- Set your desired text size -->
        <item name="android:fontFamily">@font/ubunturegular</item> <!-- Reference the font resource -->
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewLeaderboard"
        android:layout_width="358dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/quizlistbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/viewLeaderboard"
        app:layout_constraintTop_toTopOf="@+id/viewLeaderboard"
        app:srcCompat="@drawable/roundedbutton"/>

    <ImageView
        android:id="@+id/profilePic2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/viewLeaderboard"
        app:layout_constraintTop_toTopOf="@+id/viewLeaderboard"
        app:srcCompat="@drawable/roundedbutton" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8.5dp"
        android:layout_marginTop="2dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/profilePic2"
        app:layout_constraintTop_toTopOf="@+id/profilePic2" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:text="@string/name"
        app:layout_constraintStart_toEndOf="@+id/profilePic"
        app:layout_constraintTop_toTopOf="@+id/viewLeaderboard" />

    <TextView
        android:id="@+id/tvPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="20dp"
        android:text="@string/point"
        app:layout_constraintEnd_toEndOf="@+id/viewLeaderboard"
        app:layout_constraintStart_toEndOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/viewLeaderboard" />

    <View
        android:layout_width="0.8dp"
        android:layout_height="53dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/line"
        app:layout_constraintBottom_toBottomOf="@+id/viewLeaderboard"
        app:layout_constraintStart_toStartOf="@+id/viewLeaderboard"
        app:layout_constraintTop_toTopOf="@+id/viewLeaderboard" />

    <View
        android:id="@+id/view4"
        android:layout_width="0.8dp"
        android:layout_height="53dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/line"
        app:layout_constraintBottom_toBottomOf="@+id/viewLeaderboard"
        app:layout_constraintEnd_toEndOf="@+id/viewLeaderboard"
        app:layout_constraintTop_toTopOf="@+id/viewLeaderboard"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>